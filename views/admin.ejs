                        </div>

                        <div class="mb-3">
                            <input type="text" id="url_imagen" placeholder="Imagen de referencia" class="form-control">
                        </div>
                        
                        <div class="mb-3">
                            <input type="date" id="fecha_publicacion" class="form-control">
                        </div>

                        <div class="mb-3">
                            <input type="text" id="autor" placeholder="autor" class="form-control">
                        </div>

                                               

                        <button type="submit" class="btn btn-sm btn-primary">
                            Guardar
                        </button>
