    <%-include("partials/navbar") %>

            <div class="row">
                <div class="col">
                    <h1 class="text-center">Nueva Publicación</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mx-auto">
                    <form action="#" id="form-nuevo">
