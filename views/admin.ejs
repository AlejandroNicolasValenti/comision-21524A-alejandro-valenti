                            <input type="text" id="titulo" placeholder="Titulo de la publicación" class="form-control">
                        </div>
                       
                        <div class="form-floating mb-3">
                            <textarea class="form-control" placeholder="Comentarios" id="detalle"
                                style="height: 100px"></textarea>
