<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EJS Template Engine</title>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9' crossorigin='anonymous'>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col">

                <h1>Renderizando EJS</h1>
                <% if(false){ %>
                    <h2>Subtitulo</h2>
                    <% } else { %>
                        <p>
                            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Vitae, suscipit?</p>
                        <%} %>


            </div>
        </div>

        <div class="row">
            <div class="col">


                <table class="table table-stripped">
                    <thead>
                        <tr>
                            <th>
                                Username
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Lastname
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user){ %>
                            <tr>
                                <td><%= user.name  %></td>
                                <td><%= user.lastname  %></td>
                                <td><%= user.username  %></td>
                            </tr>
                          <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>



   <div class="container">
    <button class="btn btn-primary btn-sm btn-get-users">
        Obtener Datos
    </button>
    <div class="row">
        <div class="col">

            <table class="table bg-dark table-stripped">
                <thead>
                    <tr>
                        <th>
                            Username
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Lastname
                        </th>
                    </tr>
                </thead>
                <tbody id="tabla-usuarios">
                   
                </tbody>



        </div>
    </div>
   </div>


    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js' integrity='sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm' crossorigin='anonymous'></script>


    <script src="/js/home.js"></script>
</body>

</html>